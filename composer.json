{
    "name": "vsenna/ailos-sdk-php",
    "description": "Este SDK foi desenvolvido para facilitar a integração com os serviços da Cooperativa Ailos, oferecendo uma interface simples, segura e eficiente para desenvolvedores PHP.",
    "type": "sdk",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AilosSDK\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Vinícius de Senna"
        }
    ],
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.9",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite Unit",
        "test-integration": "phpunit --testsuite Integration"
    }
}
